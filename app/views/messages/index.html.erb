<h2>Shout</h2>
<ul>
  <% [*@messages].each do |message| %>
    <li><%= message.created_at %> <%= message.user.username %><span style="color:red"> shouted </span><%= message.content %></li>
  <% end %>
</ul>

<%=  form_for @message do |f|  %>
  message: <%= f.text_field :content  %>
  <%= f.submit "shout"  %>
<% end %>
<%= link_to "logout?", logout_path, {:style=>"position:absolute; top:0; right:0;"} %>
